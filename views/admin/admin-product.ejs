<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Detail</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Phudu:wght@300;400;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Concert+One&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin/admin-product.css">
    <link rel="stylesheet" href="/css/partials/sidebar.css" />
    <link rel="stylesheet" href="/css/partials/footer.css">

</head>
<body>
    <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1>Product Detail</h1>
          </div>
          <div class="col-md-1 offset-md-5 logo-image">
            <img src="/image/design_images/assets/logo.png" alt="404" />
          </div>
        </div>
      </div>
  

    <!-- data START -->
    <section id="data">
            <div class="row">
                    <%- include("../partials/sidebar.ejs") %>
                <div class="col-md-8 p-5 table-product mt-5">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Writer</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( result of data ) { %>
                                <tr>
                                    <td><%= result.id %></td>
                                    <td><%= result.title %></td>
                                    <td><%= result.writer %></td>
                                    <td class="td-price"><%= result.price %></td>
                                    <td class="td-action">
                                        <a href="/admin/edit/<%= result.id %>" class="btn btn-success">EDIT</a>
                                        <button type="button" class="btn btn-danger product-id" data-bs-toggle="modal" data-bs-target="#deleteModal" data-product-id="<%= result.id %>" >Delete</button>
                                    </td>
                                </tr>                   
                            <% } %>
                        </tbody>
                    </table>
                    <!-- addProduct START -->
                    <section id="addProduct">
                        <div class="container">
                            <a href="/admin/add_product" class="btn btn-warning">Add Product</a>
                        </div>
                    </section>
                    <!-- addProduct END -->
                </div>
            </div>
    </section>
    <!-- data END -->


    <!-- modal START -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">!! WARNING !!</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <h5>Are you sure wish to delete this product ??</h5>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger confirm-delete">DELETE</button>
        </div>
      </div>
    </div>
  </div>
    <!-- modal END -->
    <%- include("../partials/footer.ejs") %>
</body>
