<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Promo Banner</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Phudu:wght@300;400;700&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Concert+One&display=swap" rel="stylesheet" />
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="/css/admin/admin-promo-banner.css" />
        <link rel="stylesheet" href="/css/partials/sidebar.css" />
        <link rel="stylesheet" href="/css/partials/footer.css" />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>Promo Banner</h1>
                </div>
                <div class="col-md-1 offset-md-5 logo-image">
                    <img src="/image/design_images/assets/logo.png" alt="404" />
                </div>
            </div>
        </div>

        <!-- data START -->
        <section id="data">
            <div class="row">
                <%- include("../partials/sidebar.ejs") %>
                <div class="col-md-8 p-5 table-product mt-5 table-promo-banner">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Promo Name</th>
                                <th>Preview</th>
                                <th>action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((element,index) => { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= element.name %></td>
                                <td><img src="/image/uploaded_images/<%= element.promo_banner %>" alt="404" /></td>
                                <td><button type="button" class="btn btn-danger delete-button" data-banner-id=<%= element.id %>>Delete</button></td>

                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#add-banner">Add Banner</button>
                </div>
            </div>
        </section>
        <!-- data END -->

        <!-- Modal Start -->
        <div class="modal fade" id="add-banner">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Banner</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/admin/promo-banner/add" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="inputGroup-sizing-default">Banner Name</span>
                                <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="name" />
                            </div>
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" id="banner-image" name="promo_banner" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal End -->

        <%- include("../partials/footer.ejs") %>
    </body>
    <!-- <script src="/bootstraps/js/bootstrap.js"></script> -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/admin/admin-promo-banner.js"></script>
</html>
