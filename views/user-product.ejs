<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Search Product</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- Fonts Google -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Phudu:wght@300;400;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Concert+One&display=swap" rel="stylesheet" />
    <!-- css -->
    <link rel="stylesheet" href="/css/user-product.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <!-- icon -->
    <link rel="icon" href="/image/design_images/assets/logokecil.png" />
  </head>
  <body id="body">
    <!-- Navbar Start -->
    <%- include ('navbar.ejs') %>
    <!-- Navbar End -->
    <!-- Header Start -->
    <section id="header">
      <div class="container my-5">
        <div class="row">
          <div class="col-md-6 offset-3">
            <div class="input-group mb-3">
              <input type="text" id="searchProduct" class="form-control" placeholder="Search Books" />
            </div>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-md-2">
          </div>
        </div>
        <div class="row mt-5" id="buttonFilter">
          <div class="col-md-1 offset-3" >
            <button type="button" class="btn btn-secondary category" data-category="novel">Novel</button>
          </div>
          <div class="col-md-1">
            <button type="button" class="btn btn-secondary category" data-category="comic">Comic</button>
          </div>
          <div class="col-md-1">
            <button type="button" class="btn btn-secondary category" data-category="children">Children</button>
          </div>
          <div class="col-md-1">
            <button type="button" class="btn btn-secondary category" data-category="school">School</button>
          </div>
          <div class="col-md-1">
            <button type="button" class="btn btn-secondary category" data-category="religion">Religion</button>
          </div>
          <div class="col-md-1">
            <button type="button" class="btn btn-secondary category" data-category="biography">Biography</button>
          </div>
          <div class="col-md-1">
            <button type="button" class="btn btn-danger clear" data-category="clear">CLEAR</button>
          </div>
        </div>
      </div>
    </section>
    <!-- Header End -->

    <!-- Product Start -->
    <section id="product">
      <div class="container">
        <div class="row">
          <% for(result of data) { %>
            <div class="col-md-3 mb-5 mt-2 item" id="card">
              <div class="card position-relative">
                <img src="/image/uploaded_images/<%= result.image %>" class="card-img-top" alt="404" />
                <% if (result.tb_price.discount) { %>
                  <div class="discount d-flex justify-content-center position-absolute top-0 end-0">
                    <img src="/image/design_images/assets/discount.png" class="discount-tag discount-value position-absolute top-50 start-50 translate-middle" alt="">
                    <p class="discount-value position-absolute top-50 start-50 translate-middle"><%= result.tb_price.discount %>%</p>
                  </div>                 
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= result.title %></h5>
                  <p class="writer"><%= result.writer %></p>
                  <p style="display: none;" class="category"><%= result.category %></p>
                  <p class="price position-absolute bottom-0 start-0 mb-1 ms-1">Rp. <%= result.tb_price.price %></p>
                  <button type="button" href="#" class="btn btn-info position-absolute bottom-0 end-0 mb-1 me-1 detail-product" data-bs-toggle="modal" data-bs-target="#detailProduct" 
                  data-title="<%= result.title %>"
                  data-writer="<%= result.writer %>"
                  data-year="<%= result.year %>"
                  data-category="<%= result.category %>"
                  data-price="<%= result.tb_price.price %>"
                  data-synopsis="<%= result.synopsis %>"
                  data-image="<%= result.image %>"
                  >Detail</button>
                </div>
              </div>
            </div>          
          <% } %>
        </div>
      </div>
    </section>
    <!-- Product End -->

    <!-- Modal Start -->
    <section id="modal">
      <div class="modal fade modal-lg" id="detailProduct">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Book's Details</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="row d-flex justify-content-center">
                <div class="col-md-6 image position-relative">
                  <img alt="404" class="position-absolute top-50 start-50 translate-middle image-modal"/>
                </div>
                <div class="col-md-6 detail">
                  <h2 class="title title-modal"></h2>
                  <h4 class="writer writer-modal"></h4>
                  <h4 class="year year-modal"></h4>
                  <h4 class="category category-modal"></h4>
                  <h4 class="price price-modal"></h4>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md synopsis">
                  <h1>Synopsis :</h1>
                  <p class="synopsis-modal">
                  </p>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Modal End -->

    <!-- Pagination Start -->
    <section id="pagination">
      <div class="container mb-5">
        <div class="row ">
          <div class="col-md d-flex justify-content-center">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <div id="pagination-container"></div>
                <!-- <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li> -->
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </section>
    <!-- Pagination End -->
    <!-- test -->
<!-- test -->
    <!-- Footer Start -->
    <%- include('footer.ejs') %>
    <!-- Footer End -->
  </body>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/simplePagination.js/1.6/jquery.simplePagination.min.js"></script>
  <script src="/js/user-product.js"></script>
</html>
