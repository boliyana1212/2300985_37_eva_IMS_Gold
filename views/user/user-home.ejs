<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Inventory Management System</title>
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
        <!-- Fonts Google -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Phudu:wght@300;400;700&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Concert+One&display=swap" rel="stylesheet" />
        <!-- css -->
        <link rel="stylesheet" href="/css/user/user-home.css" />
        <link rel="stylesheet" href="/css/partials/navbar.css" />
        <link rel="stylesheet" href="/css/partials/footer.css" />
        <!-- icon -->
        <link rel="icon" href="assets/logokecil.png" />
    </head>
    <body>
        <!-- Navbar Start -->
        <%- include ('../partials/navbar.ejs') %>
        <!-- Navbar End -->
        <!-- Hero Start -->
        <section id="hero">
            <div class="container h-100">
                <div class="row h-100">
                    <div class="col-md-8 hero-tagline my-auto">
                        <h1 class="text-hero">BUKU TERBAIK <br />DENGAN HARGA <br />TAK TERKALAHKAN</h1>
                        <a class="btn btn-warning btn-lg" href="/users/product" role="button">Mulai Belanja -></a>
                    </div>
                </div>
                <img src="/image/design_images/assets/Mask group.png" class="position-absolute end-0 bottom-0 ms-5" />
            </div>
        </section>
        <!-- Hero End -->
        <!-- Promo Start -->
        <section id="promo">
            <div class="container p-1">
                <div class="header d-flex justify-content-center">
                    <h2>Promo Hari Ini !!</h2>
                </div>
            </div>
            <!-- <div class="container"> -->
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="true" data-bs-touch="true">
                <div class="carousel-inner position-relative">
                    <% dataPromo.forEach((element,index) => { %>
                    <div class="carousel-item <%= index ===0 ? 'active' : '' %>">
                        <img src="/image/uploaded_images/<%= element.promo_banner %>" class="d-block mx-auto" />
                      </div>
                      <% }) %>
                      <div class="carousel-navigator position-absolute top-50 start-50 translate-middle">
                        <button class="carousel-control-prev carousel-tombol" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>

                        <button class="carousel-control-next carousel-tombol" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                      </div>
                </div>
            </div>
            <!-- </div> -->
        </section>
        <!-- Promo End -->
        <!-- Best Seller Start -->

        <!-- Best Seller End -->

        <!-- Footer Start -->
        <%- include('../partials/footer.ejs') %>
        <!-- Footer End -->
    </body>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script></html>
